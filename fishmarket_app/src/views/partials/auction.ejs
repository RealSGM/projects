<div class="card" data-id="<%= product.id %>" data-owner="<%= product.seller %>">
    <div class="img-wrapper">
        <img class="img" src="<%= product.image %>" alt="Image of <%= product.name %>">
        <span class="qty-tag"><%= product.quantity %> left</span>
        <p class="price-tag">$<%= product.price.toFixed(2) %></p>
    </div>
    

    <div class="info">

        <h2 class="title"><%= product.name %></h2>
        <p class="seller">Sold by <%= product.seller %></p>
        <p class="desc"><%= product.description %></p>
        
       <div class="actions">
            <% if (role === 'buyer') { %>

                <div class="qty-section">
                    <label>Qty:</label>

                    <div class="qty-control">
                        <button class="qty-btn minus">âˆ’</button>

                        <input 
                            type="text"
                            class="qty-input"
                            value="1"
                            data-stock="<%= product.quantity %>"
                        >

                        <button class="qty-btn plus">+</button>
                    </div>
                </div>

                <button class="btn add" data-id="<%= product.id %>">Add to Cart</button>

            <% } else if (role === 'seller' && email === product.email) { %>

                <a class="btn edit" href="/listings/edit/<%= product.id %>">Edit Listing</a>
            <% } %>
        </div>
    </div>
    <link rel="stylesheet" href="/css/shared/auction.css">
</div>
